@if(_mostrar){
	<p class="text-success">El contacto ha sido añadido con éxito!</p>
	<h3>Detalles del Contacto</h3>
	<div>
		<div class="form-group row">
			<label for="nombre" class="col-md-2 col-form-label">Nombre:</label>
			<div class="col-md-10">
				<span id="nombre" class="form-control">@_contactShown?.Nombre</span>
			</div>
		</div>
		<br />
		<div class="form-group row">
			<label for="apellidos" class="col-md-2 col-form-label">Apellidos:</label>
			<div class="col-md-10">
				<span id="apellidos" class="form-control">@_contactShown?.Apellidos</span>
			</div>
		</div>
		<br />

		<div class="form-group row">
			<label for="correo" class="col-md-2 col-form-label">Email:</label>
			<div class="col-md-10">
				<span id="correo" class="form-control">@_contactShown?.Correo</span>
			</div>
		</div>
		<br />

		<div class="form-group row">
			<label for="nickname" class="col-md-2 col-form-label">Nickname:</label>
			<div class="col-md-10">
				<span id="nickname" class="form-control">@_contactShown?.Nickname</span>
			</div>
		</div>

		<br />

	</div>
}